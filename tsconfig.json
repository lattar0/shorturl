{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "typeRoots": ["./src/@types", "node_modules/@types"]
  },
  "include": ["src"]
}
